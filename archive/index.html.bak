            card.innerHTML = buildHoverCardHtml(item);

            // Position relative to tile
            const rect = tileEl.getBoundingClientRect();
            const cardWidth = 360;
            const margin = 16;

            let left = rect.left;
            // Clamp horizontally so it doesn't overflow screen
            if (left + cardWidth + margin > window.innerWidth) {
                left = window.innerWidth - cardWidth - margin;
            }
            if (left < margin) left = margin;

            let top = rect.top - 20; // slightly above
            const minTop = 72;       // avoid covering navbar too much
            if (top < minTop) top = rect.bottom + 8; // put below if too high

            card.style.left = `${left}px`;
            card.style.top = `${top}px`;
            card.style.display = 'block';

            // trigger animation
            requestAnimationFrame(() => {
                card.classList.add('visible');
                lucide.createIcons(); // icons inside the card
