                    </div>
                    <div class="flex items-center gap-2 text-sm mb-2">
                        <span class="text-yellow-400 font-bold">${rec.rating}‚≠ê</span>
                        <span class="text-gray-500">‚Ä¢</span>
                        <span class="text-gray-400">${rec.year}</span>
                    </div>
                    <div class="flex flex-wrap gap-2">
                        ${rec.tags.map(tag => `<span class="text-xs text-gray-300 bg-gray-800 px-2 py-1 rounded">${tag}</span>`).join('')}
                    </div>
                </div>
            `;

            // Position relative to tile
            const rect = tileEl.getBoundingClientRect();
            const cardWidth = 360;
            const margin = 16;

            let left = rect.right + margin; // right of tile
            if (left + cardWidth > window.innerWidth) {
                left = rect.left - cardWidth - margin; // left of tile if no space
            }
            if (left < margin) left = margin;

            let top = rect.top + (rect.height / 2) - 180; // center vertically
            const minTop = 72;
            if (top < minTop) top = minTop;
            if (top + 400 > window.innerHeight) top = window.innerHeight - 400 - margin;

            card.style.left = `${left}px`;
            card.style.top = `${top}px`;
            card.style.display = 'block';

            requestAnimationFrame(() => {
                card.classList.add('visible');
                lucide.createIcons();
            });

            card.onmouseenter = () => clearTimeout(recommendationHoverHideTimeout);
            card.onmouseleave = () => scheduleHideRecommendationHoverCard();
        }

        function scheduleHideRecommendationHoverCard() {
            clearTimeout(recommendationHoverHideTimeout);
            recommendationHoverHideTimeout = setTimeout(() => {
                const card = document.getElementById('recommendation-hover-card');
                card.classList.remove('visible');
                setTimeout(() => {
                    card.style.display = 'none';
                }, 180);
            }, 200);
        }
        function handleSearch(query) {
            const searchInput = document.getElementById('search-input');
            const searchResults = document.getElementById('search-results');
            const searchContent = document.getElementById('search-results-content');
            
            if (!query || query.trim().length === 0) {
                searchResults.classList.add('hidden');
                return;
            }

            const lowerQuery = query.toLowerCase();

            // Filter items from all categories
            const filteredProjects = projectsData.filter(item =>
                item.title.toLowerCase().includes(lowerQuery) ||
                (item.desc && item.desc.toLowerCase().includes(lowerQuery)) ||
                (item.tags && item.tags.some(t => t.toLowerCase().includes(lowerQuery)))
            );

            const filteredExperience = experienceData.filter(item =>
                item.title.toLowerCase().includes(lowerQuery) ||
                (item.desc && item.desc.toLowerCase().includes(lowerQuery)) ||
                (item.tags && item.tags.some(t => t.toLowerCase().includes(lowerQuery)))
            );

            const filteredEducation = [
                { id: 101, title: "University at Buffalo", preview: "Master of Science in Data Science", year: "Dec 2025", gradient: "bg-blue-900", image: "assets/images/ub_logo.png", tags: ["Technical Skills", "Machine Learning", "Big Data"] },
                { id: 102, title: "Pune University", preview: "Bachelor of Engineering in Computer Science", year: "May 2021", gradient: "bg-indigo-900", image: "assets/images/pune_university_logo.png", tags: ["Technical Skills", "Software Engineering"] }
            ].filter(item =>
                item.title.toLowerCase().includes(lowerQuery) ||
                (item.preview && item.preview.toLowerCase().includes(lowerQuery)) ||
                (item.tags && item.tags.some(t => t.toLowerCase().includes(lowerQuery)))
            );

            const filteredSkills = skillsData.filter(item =>
                item.title.toLowerCase().includes(lowerQuery) ||
                (item.tags && item.tags.some(t => t.toLowerCase().includes(lowerQuery)))
            );

            // Build search results HTML
            let resultsHtml = `<h2 class="text-2xl font-bold text-white mb-8">Search Results for "<span class="text-red-600">${query}</span>"</h2>`;

            // Projects
            if (filteredProjects.length > 0) {
                resultsHtml += buildSearchCategory('Projects', filteredProjects);
            }

            // Experience
            if (filteredExperience.length > 0) {
                resultsHtml += buildSearchCategory('Experience', filteredExperience);
            }

            // Education
            if (filteredEducation.length > 0) {
                resultsHtml += buildSearchCategory('Education', filteredEducation);
            }

            // Skills
            if (filteredSkills.length > 0) {
                resultsHtml += buildSearchCategory('Skills', filteredSkills);
            }

            // No results message
            if (filteredProjects.length === 0 && filteredExperience.length === 0 && filteredEducation.length === 0 && filteredSkills.length === 0) {
                resultsHtml += `<div class="text-center py-12"><p class="text-gray-400 text-lg">No results found for "<span class="text-red-600">${query}</span>"</p></div>`;
            }

            searchContent.innerHTML = resultsHtml;
            searchResults.classList.remove('hidden');
            lucide.createIcons();
        }

        function buildSearchCategory(categoryName, items) {
            let html = `<div class="search-result-category"><h3>${categoryName}</h3><div class="flex flex-wrap gap-4">`;

            items.forEach(item => {
                const cardWidthClass = categoryName === 'Skills' ? 'w-[150px] h-[220px]' : 'w-[250px] h-[170px]';
                
                html += `
                    <div onclick="openModalById(${item.id}); clearSearch();"
                         class="relative flex-shrink-0 rounded-md bg-[#181818] cursor-pointer tile-hover shadow-lg ${cardWidthClass}"
                         style="overflow: visible;">
                        <div class="w-full h-full relative overflow-hidden">
                            ${item.image ? `<div class="absolute inset-0 bg-[url('${item.image}')] bg-cover bg-center brightness-125"></div>` : ''}
                            <div class="absolute inset-0 ${(item.gradient || 'bg-gray-800')}"></div>
                            <div class="relative w-full h-full flex items-start justify-start p-4 text-left font-bold text-gray-200 bg-gradient-to-b from-black/40 to-transparent">
                                ${categoryName === 'Skills' ? `<div class="flex flex-col items-center gap-2"><span class="text-3xl">${item.icon}</span><span class="text-sm">${item.title}</span></div>` : item.title}
                            </div>
                        </div>
                        <div class="tile-overlay absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent flex flex-col justify-between p-3 rounded-md">
                            <div>
                                ${item.year ? `<div class="text-[10px] text-gray-400 mb-1">${item.year}</div>` : ''}
                                ${item.preview ? `<div class="text-[10px] text-gray-200 mb-2 leading-tight">${item.preview}</div>` : ''}
                            </div>
                            <div>
                                <div class="flex items-center gap-2 text-[10px] text-green-400 font-bold">
                                    <span>${item.match || '98%'}</span>
                                </div>
                                <div class="flex flex-wrap gap-1 mt-1">
                                    ${(item.tags || []).slice(0, 3).map(t => `<span class="text-[10px] text-gray-200">‚Ä¢ ${t}</span>`).join('')}
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            });

            html += `</div></div>`;
            return html;
        }

        function clearSearch() {
            document.getElementById('search-input').value = '';
            document.getElementById('search-results').classList.add('hidden');
        }
    </script>

    <!-- HOVER CARD (Netflix-style) -->
    <div id="hover-card" class="hover-card" style="display: none;"></div>
</body>
</html>
